<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Button to Navigate to Airplane Mode Settings -->
    <Button
        android:id="@+id/btn_airplane_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Airplane Mode on or off"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- Button to Navigate to Mobile Data Settings -->
    <Button
        android:id="@+id/btn_mobile_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Mobile Data on or off"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- Button to Control Volume Settings -->
    <Button
        android:id="@+id/btn_volume_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume Control"
        android:padding="10dp" />
    <Button
        android:id="@+id/btnOpenMessageActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write and Send Message"
        android:layout_marginTop="16dp"
        android:padding="10dp" />

</LinearLayout>
